@section scripts{
    <script>
        Shift()
        ValidateMoney('tiendauca')
        ValidateMoney('tiencuoica')
        ValidateMoney('tienthucban')
        function Shift() {
            $.ajax({
                url: '/home/Shift',
                type: 'get',
                success: function (data) {
                    $('#caban').empty();
                    if (data.code == 200) {
                        $('div[name="nhanvien"]').append(data.nv);
                        let table = '<option value="' + data.ca + '">' + data.ca + '</option>'
                        $.each(data.c, function (k, v) {
                            table += '<option value="' + v.id + '">' + v.name + '</option>'
                        });
                        $('#caban').append(table);
                    } else {
                        alert(data.msg)
                    }
                }
            })
        }
    </script>
    <script src="~/Scripts/Home.js"></script>
}
