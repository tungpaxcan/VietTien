                <button type="button" onclick="printDiv('inct')" class="btn btn-primary">IN</button>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        var d = new Date()
        $('#id').val(d.Day)
        $(document).ready(function () {
            $('#id').val(d.getDate() + "" + (d.getMonth() + 1) + "" + d.getFullYear() + "" + d.getHours() + "" + d.getMinutes() + "" + d.getSeconds())
        });
        Method()
        User()
        function User() {
            $.ajax({
                url: '/Receipt/UserNV',
                type: 'get',
                success: function (data) {
                    $('#user1').empty();
                    $('#user2').empty();
                    if (data.code == 200) {
                        let table = '<option value="-1">Chọn Nhân Viên Kiểm Hàng</option>'
                        $.each(data.c, function (k, v) {
                            table += '<option value="' + v.id + '">' + v.name + '</option>'
                        });
                        $('#user1').append(table);
                        $('#user2').append(table);
                    } else (
                        alert(data.msg)
                    )
                }
            })
        }

        function Method() {
            $.ajax({
                url: '/Receipt/Method',
                type: 'get',
                success: function (data) {
                    $('#method').empty();
                    if (data.code == 200) {
                        let table = '<option value="-1">Chọn Phương Thức</option>'
                        $.each(data.c, function (k, v) {
                            table += '<option value="' + v.id + '">' + v.name + '</option>'
                        });
                        $('#method').append(table);
                    } else (
                        alert(data.msg)
                    )
                }
            })
        }
    </script>
    <script src="~/Scripts/Receipt.js"></script>
    @* Scanner *@
    <script src="~/Scripts/ebapi-modules.js"></script>
    <script>
        EB.Barcode.enable({
            allDecoders: true
        }, fnBarcodeScanned);
        function fnBarcodeScanned(jsonObject) {
            // alert("Barcode Scanned:{" + JSON.stringify(jsonObject) + "}");
            document.getElementById('purchaseorder').value = "";
            document.getElementById('purchaseorder').value = jsonObject.data;
        }

    </script>
}