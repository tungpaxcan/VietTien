@model iGMS.Models.Store
@{
    ViewBag.Title = "Thêm Quầy Bán Tại " + Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<input value="@Model.Id" id="idstore" hidden />
<div class="card card-custom">
    <div class="card-header">
        <h3 class="card-title">
            Thêm Quầy Bán Tại @Model.Name
        </h3>
    </div>
    <!--begin::Form-->
    <div class="card-body">
        <div class="form-group mb-8">
            <div class="alert alert-custom alert-default" role="alert">
                <div class="alert-icon"><i class="flaticon-warning text-primary"></i></div>
                <div class="alert-text">
                    Vui Lòng Nhập Đúng Tất Cả Dữ Liệu Để Đảm Bảo Hệ Thống
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-2 col-form-label">Mã Quầy Bán <span style="color:red"> (*) </span></label>
            <div class="col-10">
                <div class="input-group-prepend">
                    <span class="input-group-text">QB</span>
                    <input required class="form-control" value="0000001" type="number" min="0000001" max="1000000" onkeyup="ValidateId()" onclick="ValidateId()" id="id" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="example-password-input" class="col-2 col-form-label">Tên Quầy Bán <span style="color:red"> (*) </span></label>
            <div class="col-10">
                <div class="input-group ">
                    <input class="form-control" type="text" placeholder="Tên Quầy Bán" id="name" />
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-2">
            </div>
            <div class="col-10">
                <button type="submit" class="btn btn-success mr-2" onclick="Add()">Submit</button>
                <a href="/Stalls/Index/@Model.Id" type="reset" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </div>
</div>
@section scripts{

    <script src="~/Scripts/Stalls.js"></script>
}


